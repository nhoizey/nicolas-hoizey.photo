{
	"name": "nho-photo",
	"version": "2.0.0",
	"title": "Nicolas Hoizey photo",
	"description": "The photography portfolio of Nicolas Hoizey",
	"homepage": "https://nicolas-hoizey.photo",
	"author": {
		"name": "Nicolas Hoizey",
		"url": "https://nicolas-hoizey.com/"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nhoizey/nicolas-hoizey.photo.git"
	},
	"bugs": {
		"url": "https://github.com/nhoizey/nicolas-hoizey.photo/issues"
	},
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"browserslist": [
		"Chrome > 0 and last 2.5 years",
		"ChromeAndroid > 0 and last 2.5 years",
		"Edge > 0 and last 2.5 years",
		"Firefox > 0 and last 2.5 years",
		"FirefoxAndroid > 0 and last 2.5 years",
		"Safari > 0 and last 2.5 years",
		"iOS > 0 and last 2.5 years",
		"not dead"
	],
	"scripts": {
		"clean": "rimraf _site",
		"eleventy:build": "eleventy",
		"eleventy:serve": "eleventy --serve",
		"index": "npx -y pagefind --site _site --force-language unknown",
		"start": "npm-run-all --sequential clean eleventy:serve",
		"debug:start": "DEBUG=Eleventy* npm start",
		"serviceworker:injectmanifest": "workbox injectManifest workbox.config.cjs",
		"serviceworker:bundle": "node build-service-worker.js",
		"serviceworker": "npm-run-all --sequential serviceworker:injectmanifest serviceworker:bundle",
		"build": "npm-run-all --sequential clean eleventy:build index serviceworker",
		"benchmark": "DEBUG=Eleventy:Benchmark* npm run build >benchmarks/benchmark.log 2>&1",
		"debug:build": "DEBUG=Eleventy* npm run build",
		"subset": "glyphhanger https://nicolas-hoizey.photo/tools/subset --whitelist=U+0020 --subset=./assets/font/*.ttf --formats=woff2,woff --output=./src/static/ui/fonts/",
		"dates": "./_scripts/add-dates.sh",
		"prepare": "npx husky install",
		"webmentions": "node ./_scripts/update-webmentions.js",
		"flickr": "node ./_scripts/update-flickr.js",
		"unsplash": "node ./_scripts/update-unsplash.js",
		"pixelfed": "node ./_scripts/update-pixelfed.js",
		"mastodon": "node ./_scripts/update-mastodon.js",
		"generate": "./_scripts/generate-map-images.js && ./_scripts/generate-opengraph-images.js && ./_scripts/generate-photos-sprite.js",
		"lint": "npx @biomejs/biome check --write"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@biomejs/biome": "^2.2.3",
		"@turf/turf": "^7.2.0",
		"dotenv": "^17.2.2",
		"download": "^8.0.0",
		"eleventy-plugin-auto-preload": "^1.2.0",
		"eleventy-plugin-pack11ty": "^2.6.0",
		"entities": "^6.0.1",
		"exifr": "^7.1.3",
		"fast-glob": "^3.3.3",
		"fast-memoize": "^2.5.2",
		"feather-icons": "^4.29.2",
		"flickr-sdk": "^7.1.0",
		"fraction.js": "^5.3.4",
		"git-pull-run": "^1.6.2",
		"glyphhanger": "^5.0.0",
		"gray-matter": "^4.0.3",
		"html-entities": "^2.6.0",
		"husky": "^9.1.7",
		"image-size": "^2.0.2",
		"lint-staged": "^16.1.6",
		"lodash-es": "^4.17.21",
		"majesticons": "^2.1.2",
		"mapbox-gl": "^3.14.0",
		"mapbox-gl-animated-popup": "^0.4.0",
		"mapbox-gl-globe-minimap": "^1.2.0",
		"mapbox-gl-style-switcher": "^1.0.11",
		"masto": "^7.2.0",
		"mbsprite": "^0.2.0",
		"node-fetch": "^3.3.2",
		"node-vibrant": "^4.0.3",
		"npm-run-all": "^4.1.5",
		"pagefind": "^1.4.0",
		"pixelmatch": "^7.1.0",
		"pngjs": "^7.0.0",
		"polylabel": "^2.0.1",
		"puppeteer-cluster": "^0.24.0",
		"puppeteer-core": "^24.19.0",
		"require-dir": "^1.2.0",
		"rimraf": "^6.0.1",
		"sanitize-html": "^2.17.0",
		"sharp": "^0.34.3",
		"simple-icons": "^15.14.0",
		"svg-country-flags": "^1.2.10",
		"svgstore": "^3.0.1",
		"truncate-html": "^1.2.2",
		"unsplash-js": "^7.0.19",
		"utf8": "^3.0.0",
		"workbox-cli": "^7.3.0",
		"workbox-recipes": "^7.3.0",
		"yaml": "^2.8.1"
	},
	"dependencies": {
		"@observablehq/plot": "^0.6.17",
		"toastify-js": "^1.12.0"
	}
}
