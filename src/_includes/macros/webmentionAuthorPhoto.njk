{% macro webmentionAuthorPhoto(author) %}
  {% if author.photo != "" %}
    <img
      class="webmention__author__photo u-photo"
      src="{{ author.photo }}"
      width= "48"
      height="48"
      alt="{{ author.name }} avatar"
      loading="lazy"
      decoding="async"
      fetchpriority="low"
      crossorigin="anonymous"
      data-responsiver="webmention"
      onerror="this.src='/ui/images/default-avatar.svg'; this.onerror=null" />
  {% endif %}
{% endmacro %}
